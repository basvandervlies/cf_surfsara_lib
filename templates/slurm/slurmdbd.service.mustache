[Unit]
Description=Slurm DBD accounting daemon
After=network.target munge.service
#ConditionPathExists=/etc/slurm-llnl/slurmdbd.conf
ConditionPathExists={{{vars.slurm.config_dir}}}/slurmdbd.conf
Documentation=man:slurmdbd(8)

[Service]
Type=forking
EnvironmentFile=-/etc/default/slurmdbd
#ExecStart=/usr/sbin/slurmdbd $SLURMDBD_OPTIONS
ExecStart={{{vars.slurm.software_dir}}}/current/sbin/slurmdbd $SLURMDBD_OPTIONS
ExecReload=/bin/kill -HUP $MAINPID
PIDFile=/run/slurmdbd.pid
LimitNOFILE=65536
TasksMax=infinity

[Install]
WantedBy=multi-user.target
